{
  "name": "roomservice",
  "version": "2.0.3",
  "description":
    "A simple, friendly build tool that tries to be lazy about what it does to save you time",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test-ci":
      "jest && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "test:watch": "jest --watch",
    "build": "tsc",
    "prepublishOnly": "npm run test && npm run build"
  },
  "bin": {
    "roomservice": "./build/index.js"
  },
  "author": "Curtis Wilkinson",
  "license": "MIT",
  "dependencies": {
    "@types/rimraf": "^2.0.2",
    "chalk": "2.1",
    "cli": "^1.0.1",
    "columnify": "^1.5.4",
    "log-update": "^2.3.0",
    "md5": "^2.2.1",
    "mz": "^2.7.0",
    "toml": "^2.3.3",
    "yaml": "^0.3.0"
  },
  "devDependencies": {
    "@types/chalk": "0.4",
    "@types/cli": "^0.11.19",
    "@types/jest": "^21.1.6",
    "@types/log-update": "^2.0.0",
    "@types/md5": "^2.1.32",
    "@types/mz": "^0.0.32",
    "coveralls": "^3.0.0",
    "jest": "^21.2.1",
    "prettier": "^1.8.2",
    "rimraf": "^2.6.2",
    "typescript": "^2.6.1"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": ["!src/{text|console|index}.ts", "src/**/*.ts"],
    "moduleFileExtensions": ["ts", "tsx", "js"],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/jest/typescript.js"
    },
    "testMatch": ["**/src/**/*.spec.(ts|tsx|js)"]
  }
}
