{
  "name": "roomservice",
  "version": "3.0.1",
  "homepage": "https://github.com/curtiswilkinson/roomservice",
  "description": "A simple, friendly build tool that will only build when it sees files have changed",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test-ci": "jest && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "test:watch": "jest --watch",
    "build": "tsc",
    "prepublishOnly": "npm run test && npm run build"
  },
  "bin": {
    "roomservice": "./build/index.js"
  },
  "author": "Curtis Wilkinson",
  "license": "MIT",
  "dependencies": {
    "@types/rimraf": "^2.0.2",
    "chalk": "2.1",
    "cli": "^1.0.1",
    "columnify": "^1.5.4",
    "js-yaml": "^3.10.0",
    "log-update": "^2.3.0",
    "md5": "^2.2.1",
    "mz": "^2.7.0",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "toml": "^2.3.3"
  },
  "devDependencies": {
    "@types/chalk": "0.4",
    "@types/cli": "^0.11.19",
    "@types/jest": "^21.1.6",
    "@types/log-update": "^2.0.0",
    "@types/md5": "^2.1.32",
    "@types/mz": "^0.0.32",
    "@types/request-promise": "^4.1.39",
    "coveralls": "^3.0.0",
    "jest": "^21.2.1",
    "prettier": "^1.8.2",
    "rimraf": "^2.6.2",
    "typescript": "^2.6.1"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "!src/{text|console|index}.ts",
      "src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/jest/typescript.js"
    },
    "testMatch": [
      "**/src/**/*.spec.(ts|tsx|js)"
    ]
  }
}
