{
  "name": "roomservice",
  "version": "1.0.2",
  "description": "A simple, friendly build tool that tries to be lazy about what it does to save you time",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "tsc",
    "prepublish": "npm run test && npm run build"
  },
  "bin": {
    "roomservice": "./build/index.js"
  },
  "author": "Curtis Wilkinson",
  "license": "MIT",
  "dependencies": {
    "@types/rimraf": "^2.0.2",
    "chalk": "2.1",
    "cli": "^1.0.1",
    "md5": "^2.2.1",
    "mz": "^2.7.0",
    "ora": "^1.3.0",
    "toml": "^2.3.3"
  },
  "devDependencies": {
    "@types/chalk": "0.4",
    "@types/cli": "^0.11.19",
    "@types/jest": "^21.1.6",
    "@types/md5": "^2.1.32",
    "@types/mz": "^0.0.32",
    "@types/ora": "^1.3.1",
    "jest": "^21.2.1",
    "prettier": "^1.8.2",
    "rimraf": "^2.6.2",
    "typescript": "^2.6.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/jest/typescript.js"
    },
    "testMatch": [
      "**/src/*.spec.(ts|tsx|js)"
    ]
  }
}
